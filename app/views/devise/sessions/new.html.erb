<div class="background">
  <div class="container mt-3" style="width: 400px;">

  <h2 class="mb-3 center">Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { class: "center", autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { class: "center", autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>



    <div class="form-actions btn-light center">
      <%= f.button :submit, "Log in" %>
    </div>
    <br>
  <% end %>
      <%= render "devise/shared/links" %>
  </div>
</div>
