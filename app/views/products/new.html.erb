<div class="container mt-5">

<h1 class="text-center mb-5">Add your product</h1>

<%= simple_form_for @product do |f| %>
  <%= f.input :name, autofocus: true%>
  <%= f.input :category, collection: %w(necklaces earrings bracelets rings sets other) %>
  <%= f.input :description, autofocus: true%>
  <%= f.input :price, label: "Daily rate" %>
  <br>

  <label class="btn-light clickable">
    Upload a photo
    <span style="display:none;">
      <%= f.input :photo, as: :file %>
    </span>
  </label>
  <br>
  <div class="text-center">
    <%= f.button :submit, class:"btn-heavy" %>
  </div>

<% end %>

</div>
