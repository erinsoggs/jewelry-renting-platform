
  <% if @products.empty? %>
      <p class="text-center m-10">No products!</p>
  <% else %>

      <div class="row">
        <% @products.each do |product| %>
          <div class="col-sm-12 col-md-6">

            <%= link_to product_path(product), class:"card-product-link" do %>

              <div class="card-product">

                <%= cl_image_tag(product.photo.key) %>

                <div class="card-product-infos">

                  <h2><%= product.name %></h2>

                  <p class="card-product-pricing">$<%= product.price %>/day</p>

                  <% if product.user.photo.attached?  %>
                    <%= cl_image_tag(product.user.photo.key,width: 200, height: 200, crop: :thumb, gravity: :face,
                        class:"card-product-user avatar avatar-bordered") %>
                  <% else %>
                    <%= image_tag('user.png',
                        class:"card-product-user avatar avatar-bordered") %>
                  <% end %>

                </div>
              </div>


          <% end %>


          </div>
        <% end %>
      </div>

  <% end %>

