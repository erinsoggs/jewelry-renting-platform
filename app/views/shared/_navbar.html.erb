<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">

  <%= link_to root_path, class: "link-to-home" do%>
    BeJoo
  <% end %>


  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">

      <% if current_user %>
        <li class="nav-item dropdown">

          <% if current_user.photo.attached?  %>
            <%= cl_image_tag(current_user.photo.key, width: 40, height: 40, crop: :thumb, gravity: :face,
                class:"avatar dropdown-toggle clickable", id:"navbarDropdown",
                "data-toggle" => "dropdown", "aria-haspopup" => "true", "aria-expanded" => "false") %>
          <% else %>
            <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="assets/user.png" />
          <% end %>

          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <a class="dropdown-link dropdown-item" href="#">My bookings</a>
            <a class="dropdown-link dropdown-item" href="#">My jewels for rent</a>
            <a class="dropdown-link dropdown-item" href="#">My account</a>
            <%= link_to "#", id:"sign-out-dropdown-link", class:"dropdown-link dropdown-item" do %>
              Sign out
            <% end %>
          </div>
        </li>

      <% else %>
        <li class="nav-item">
          <%= link_to new_user_session_path, class: "white-link nav-link" do%>
            Log in
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to new_user_registration_path, class: "white-link nav-link" do%>
            Sign up
          <% end %>
        </li>
      <% end %>

    </ul>
  </div>
</div>
